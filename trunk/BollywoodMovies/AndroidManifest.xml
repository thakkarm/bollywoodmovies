<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.bollywoodmovies"
      android:versionName="1.2" android:versionCode="9">
    <application android:icon="@drawable/appicon" android:label="@string/app_name" android:name="MyApplication">
        <activity android:name=".SplashActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewsActivity"
                  android:label="@string/newsActivityLabel">
        </activity>
        <activity android:name=".PhotoGalleryActivity"
                  android:label="@string/photoGalleryActivityLabel">
        </activity>
        <activity android:name=".MenuActivity"
                  android:label="@string/menuActivityLabel">
        </activity>
        <activity android:name=".AboutUsActivity"
                  android:label="@string/aboutUsActivityLabel">
        </activity>
        <activity android:name=".PhotoListView"
                  android:label="@string/photoListViewLabel">
        </activity>
        <activity android:name=".Photo"
                  android:label="@string/photoGalleryActivityLabel">
        </activity>
        <activity android:name=".NewsListView"
                  android:label="@string/newsActivityLabel">
        </activity>
        <activity android:name=".NewsItem"
                  android:label="@string/newsItemActivityLabel">
        </activity>

        <!-- Google AdMob Activity -->
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>

        <!-- The application's publisher ID assigned by AdMob -->
        <meta-data android:value="a14b7caea59bc24" android:name="ADMOB_PUBLISHER_ID" />

    </application>
    
    <uses-sdk android:minSdkVersion="1" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <!-- Google AdMob SDK permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest> 
